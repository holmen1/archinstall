Config { overrideRedirect = False
       , font     = "xft:iosevka-9"
       , bgColor  = "#5f5f5f"
       , fgColor  = "#f8f8f2"
       , position = TopW L 100
       , commands = [ Run Cpu
                        [ "-L", "3"
                        , "-H", "50"
                        , "--high"  , "red"
                        , "--normal", "green"
                        ] 10
                    , Run Alsa "default" "Master"
                        [ "--template", "<volumestatus>"
                        , "--suffix"  , "True"
                        , "--"
                        , "--on", ""
                        ]
                    , Run Wireless "wlan0"
                        [ "--template", "WiFi: <essid> <quality>%"
                        , "--Low"     , "20"       -- Quality below this is considered low
                        , "--High"    , "80"       -- Quality above this is considered high
                        , "--low"     , "red"
                        , "--normal"  , "yellow"
                        , "--high"    , "green"
                        ] 50
                    , Run Battery
                        [ "--template", "Battery: <acstatus>"
                        , "--Low"     , "10"
                        , "--High"    , "80"
                        , "--low"     , "red"
                        , "--normal"  , "yellow"
                        , "--high"    , "green"
                        , "--"
                        , "-o"        , "<left>% (<timeleft>)"
                        , "-O"        , "Charging"
                        , "-i"        , "Charged"
                        ] 50
                    , Run Date "%a %Y-%m-%d <fc=#8be9fd>%H:%M</fc>" "date" 10
                    , Run Com "~/repos/archinstall/scripts/trayer-padding-icon.sh" [] "trayerpad" 10
                    , Run XMonadLog
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%XMonadLog% }{ %alsa:default:Master% | %cpu% | %wlan0wi% | %battery% | %date% | %trayerpad% "
       }
