Config { overrideRedirect = False
       , font     = "xft:iosevka-9"
       , bgColor  = "#5f5f5f"
       , fgColor  = "#f8f8f2"
       , position = TopW L 96
       , commands = [ Run Cpu
                        [ "-L", "3"
                        , "-H", "50"
                        , "--high"  , "red"
                        , "--normal", "green"
                        ] 10
                    , Run Wireless "wlan0"
                        [ "--template", "WiFi: <essid>"] 50
                    , Run Battery
                        [ "--template", "Battery: <acstatus>"
                        , "--Low"     , "10"
                        , "--High"    , "80"
                        , "--low"     , "red"
                        , "--normal"  , "yellow"
                        , "--high"    , "green"
                        , "--"
                        , "-o"        , "<left>% (<timeleft>)"
                        , "-O"        , "Charging"
                        , "-i"        , "Charged"
                        ] 50
                    , Run Date "%a %Y-%m-%d <fc=#8be9fd>%H:%M</fc>" "date" 10
                    , Run XMonadLog
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%XMonadLog% }{ %cpu% | %wlan0wi% | %battery% | %date% "
       }
